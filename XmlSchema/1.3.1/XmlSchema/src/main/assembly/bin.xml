<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeSiteDirectory>true</includeSiteDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>*.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <!-- exclude sources -->
             <excludes>
                <exclude>*-sources.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <!--<includes>-->
                <!--<include>org.apache.ws.commons:ws-commons-java5</include>-->
            <!--</includes>-->
        </dependencySet>
    </dependencySets>
</assembly>
